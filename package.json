{
  "name": "chengyi-veg-platform",
  "version": "0.1.0",
  "private": true,
  "description": "誠憶鮮蔬全新線上系統 Monorepo",
  "packageManager": "pnpm@9.9.0",
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r --parallel run lint",
    "lint:fix": "pnpm -r --parallel run lint:fix",
    "test": "pnpm -r run test",
    "type-check": "pnpm -r run type-check",
    "type-check:api": "cd apps/api && tsc --noEmit",
    "type-check:web": "cd apps/web && tsc --noEmit",
    "type-check:driver": "cd apps/driver && tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "start": "node src/server.js",
    "test:api": "pnpm --dir apps/api test",
    "test:web": "pnpm --dir apps/web test",
    "test:driver": "pnpm --dir apps/driver test",
    "prisma:generate": "pnpm --filter api prisma generate",
    "storybook": "pnpm --filter web storybook",
    "deploy:api": "rm -rf .railway/api && pnpm --filter api build && pnpm --filter api deploy --prod .railway/api",
    "deploy:web": "rm -rf .railway/web && pnpm --filter web build && pnpm --filter web deploy --prod .railway/web",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/minimatch": "^6.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "eslint": "^9.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "globals": "^15.9.0",
    "typescript-eslint": "^8.15.0",
    "prettier": "^3.6.2",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
