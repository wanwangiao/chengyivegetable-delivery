    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // 配送區域管理功能
        let deliveryAreas = [];

        // 載入現有設定
        async function loadDeliveryAreas() {
            try {
                const response = await fetch('/api/admin/delivery-areas');
                const result = await response.json();
                
                if (result.success) {
                    deliveryAreas = result.data || [];
                    updateFormFromData();
                    updateStatistics();
                }
            } catch (error) {
                console.error('載入配送區域失敗:', error);
            }
        }

        // 根據資料更新表單
        function updateFormFromData() {
            // 清除所有勾選
            document.querySelectorAll('.district-checkbox, .city-checkbox').forEach(cb => cb.checked = false);
            
            // 根據資料勾選
            deliveryAreas.forEach(area => {
                const districtCb = document.querySelector(`input[value="${area.district}"][data-city="${area.city}"]`);
                if (districtCb) {
                    districtCb.checked = true;
                    districtCb.closest('.district-item').classList.add('active');
                }
            });
            
            // 更新縣市勾選狀態
            updateCityCheckboxes();
        }

        // 更新縣市勾選狀態
        function updateCityCheckboxes() {
            document.querySelectorAll('.city-checkbox').forEach(cityCheckbox => {
                const cityName = cityCheckbox.value;
                const cityDistricts = document.querySelectorAll(`input[data-city="${cityName}"]`);
                const checkedDistricts = document.querySelectorAll(`input[data-city="${cityName}"]:checked`);
                
                cityCheckbox.checked = checkedDistricts.length > 0;
            });
        }

        // 更新統計資訊
        function updateStatistics() {
            const enabledCities = new Set(deliveryAreas.map(area => area.city));
            const enabledDistricts = deliveryAreas.length;
            const totalDistricts = document.querySelectorAll('.district-checkbox').length;
            const coverageRate = totalDistricts > 0 ? Math.round((enabledDistricts / totalDistricts) * 100) : 0;
            
            document.getElementById('enabled-cities-count').textContent = enabledCities.size;
            document.getElementById('enabled-districts-count').textContent = enabledDistricts;
            document.getElementById('coverage-rate').textContent = `${coverageRate}%`;
        }

        // 區域勾選變更
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('district-checkbox')) {
                const districtItem = e.target.closest('.district-item');
                if (e.target.checked) {
                    districtItem.classList.add('active');
                } else {
                    districtItem.classList.remove('active');
                }
                
                updateCityCheckboxes();
            }
        });

        // 縣市勾選變更
        document.addEventListener('change', function(e) {
            if (e.target.classList.contains('city-checkbox')) {
                const cityName = e.target.value;
                const cityDistricts = document.querySelectorAll(`input[data-city="${cityName}"]`);
                
                cityDistricts.forEach(district => {
                    district.checked = e.target.checked;
                    const districtItem = district.closest('.district-item');
                    if (e.target.checked) {
                        districtItem.classList.add('active');
                    } else {
                        districtItem.classList.remove('active');
                    }
                });
            }
        });

        // 提交表單
        document.getElementById('delivery-areas-form').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const checkedDistricts = document.querySelectorAll('.district-checkbox:checked');
            const areas = Array.from(checkedDistricts).map(cb => ({
                city: cb.dataset.city,
                district: cb.value,
                enabled: true
            }));
            
            if (areas.length === 0) {
                alert('請至少選擇一個配送區域');
                return;
            }
            
            try {
                const response = await fetch('/api/admin/delivery-areas', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ areas })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    deliveryAreas = areas;
                    updateStatistics();
                    alert(`✅ 配送區域設定已儲存！\n已開放 ${new Set(areas.map(a => a.city)).size} 個縣市，共 ${areas.length} 個區域`);
                } else {
                    alert(`儲存失敗: ${result.message}`);
                }
            } catch (error) {
                console.error('儲存配送區域失敗:', error);
                alert('儲存失敗，請稍後再試');
            }
        });

        // 頁面載入時初始化
        document.addEventListener('DOMContentLoaded', loadDeliveryAreas);
    </script>
