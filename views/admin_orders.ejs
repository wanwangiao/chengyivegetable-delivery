            }
        }
        
        // æ›´æ–°è¨‚å–®é¡¯ç¤º
        function updateOrdersDisplay() {
            const tableBody = document.querySelector('.orders-table tbody');
            if (!tableBody) return;
            
            if (filteredOrders.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="6" class="text-center">æ²’æœ‰æ‰¾åˆ°è¨‚å–®</td></tr>';
                return;
            }
            
            tableBody.innerHTML = filteredOrders.map(order => {
                const statusInfo = getStatusInfo(order.status);
                const orderDate = new Date(order.created_at).toLocaleDateString('zh-TW');
                
                return `
                    <tr onclick="viewOrderDetails(${order.id})">
                        <td>#${order.id}</td>
                        <td>
                            <div><strong>${order.contact_name}</strong></div>
                            <div style="color: #7f8c8d; font-size: 0.9em;">${order.contact_phone}</div>
                        </td>
                        <td style="max-width: 200px;">
                            <div style="overflow: hidden; text-overflow: ellipsis;">
                                ${order.address}
                            </div>
                        </td>
                        <td>
                            <span class="status-badge ${statusInfo.class}">${statusInfo.text}</span>
                        </td>
                        <td><strong style="color: #27ae60;">$${order.total}</strong></td>
                        <td style="color: #7f8c8d; font-size: 0.9em;">${orderDate}</td>
                    </tr>
                `;
            }).join('');
        }
        
        // ç²å–ç‹€æ…‹è³‡è¨Š
        function getStatusInfo(status) {
            const statusMap = {
                'pending': { class: 'status-pending', text: 'å¾…ç¢ºèª' },
                'preparing': { class: 'status-preparing', text: 'æº–å‚™ä¸­' },
                'packed': { class: 'status-packed', text: 'åŒ…è£å®Œæˆ' },
                'delivering': { class: 'status-delivering', text: 'é…é€ä¸­' },
                'delivered': { class: 'status-delivered', text: 'å·²å®Œæˆ' },
                'cancelled': { class: 'status-cancelled', text: 'å·²å–æ¶ˆ' }
            };
            return statusMap[status] || { class: 'status-pending', text: status };
        }
        
        // æ›´æ–°çµ±è¨ˆæ•¸æ“š
        function updateStatistics() {
            const stats = {
                pending: allOrders.filter(o => o.status === 'pending').length,
                preparing: allOrders.filter(o => o.status === 'preparing').length,
                packed: allOrders.filter(o => o.status === 'packed').length,
                delivering: allOrders.filter(o => o.status === 'delivering').length,
                delivered: allOrders.filter(o => o.status === 'delivered').length,
                cancelled: allOrders.filter(o => o.status === 'cancelled').length
            };
            
            // æ›´æ–°çµ±è¨ˆå¡ç‰‡
            Object.keys(stats).forEach(status => {
                const element = document.querySelector(`.stat-card.${status} .stat-number`);
                if (element) {
                    element.textContent = stats[status];
                }
            });
            
            // æ›´æ–°ç¸½æ•¸
            const totalElement = document.querySelector('.orders-header div');
            if (totalElement) {
                totalElement.innerHTML = `${allOrders.length} ç­†è¨‚å–®`;
            }
        }
        
        // åˆå§‹åŒ–æ‰‹æ©Ÿå°èˆª
        function initMobileNavigation() {
            // æ·»åŠ æ‰‹æ©Ÿå°èˆªæŒ‰éˆ•
            if (window.innerWidth <= 768) {
