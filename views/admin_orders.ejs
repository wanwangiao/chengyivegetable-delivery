    <!-- æ‰‹æ©Ÿå°èˆªæ§åˆ¶å’ŒAPIåŠŸèƒ½ -->
    <script>
        // å…¨å±€è®Šæ•¸
        let allOrders = [];
        let filteredOrders = [];
        
        // é é¢è¼‰å…¥æ™‚åˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', function() {
            loadOrders();
