            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            // 顯示動畫
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            // 3秒後移除
            setTimeout(() => {
                notification.style.transform = 'translateX(400px)';
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 300);
            }, 3000);
        }
        
        // 數據統計增強功能 - 即時數據流、預測分析、性能監控
        let realtimeUpdateInterval = null;
        let isRealtimeActive = false;
        
        function toggleRealtime() {
            const button = document.getElementById('realtimeToggle');
            const indicator = document.getElementById('realtimeIndicator');
            const status = document.getElementById('realtimeStatus');
            
            if (isRealtimeActive) {
                clearInterval(realtimeUpdateInterval);
                isRealtimeActive = false;
                button.textContent = '🔄 啟動即時更新';
                button.className = 'btn btn-success';
                indicator.textContent = '🔴';
                status.textContent = '離線';
                showNotification('即時更新已停用');
            } else {
                isRealtimeActive = true;
                button.textContent = '⏸️ 停用即時更新';
                button.className = 'btn btn-warning';
                indicator.textContent = '🟢';
                status.textContent = '即時更新中';
                
                const interval = parseInt(document.getElementById('updateInterval').value) * 1000;
                realtimeUpdateInterval = setInterval(updateRealtimeData, interval);
                
                showNotification('即時更新已啟動');
                updateRealtimeData();
            }
        }
        
        function updateRealtimeData() {
            const now = new Date();
            document.getElementById('lastUpdate').textContent = now.toLocaleTimeString('zh-TW');
            
            const performanceScore = (95 + Math.random() * 5).toFixed(1) + '%';
            document.getElementById('performanceScore').textContent = performanceScore;
            
            updateStatistics(30, 'previous');
        }
        
        function updateInterval(newInterval) {
            if (isRealtimeActive) {
                clearInterval(realtimeUpdateInterval);
                const interval = parseInt(newInterval) * 1000;
                realtimeUpdateInterval = setInterval(updateRealtimeData, interval);
                showNotification(`更新間隔已調整為 ${newInterval} 秒`);
            }
        }
        
        function exportAllReports() {
            showNotification('正在準備完整報表包...');
            setTimeout(() => {
                showNotification('📊 完整報表已匯出');
            }, 2000);
        }
        
        function scheduleReport() {
            const scheduleModal = document.createElement('div');
            scheduleModal.innerHTML = `
                <div class="modal-overlay" onclick="closeModal(this)" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0,0,0,0.7); z-index: 10000; display: flex; align-items: center; justify-content: center;">
                    <div class="modal-content" onclick="event.stopPropagation()" style="background: white; padding: 30px; border-radius: 12px; max-width: 400px; width: 90%; color: #333;">
                        <h3>⏰ 排程報表設定</h3>
                        <div style="margin-bottom: 15px;">
                            <label style="display: block; margin-bottom: 5px;">報表類型:</label>
                            <select id="reportType" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                                <option value="all">完整報表</option>
                                <option value="revenue">營收分析</option>
                            </select>
                        </div>
                        <div style="text-align: center; margin-top: 20px;">
                            <button class="btn btn-primary" onclick="confirmSchedule()" style="margin-right: 10px;">確認排程</button>
                            <button class="btn" onclick="closeModal(this.closest('.modal-overlay'))">取消</button>
                        </div>
                    </div>
                </div>
            `;
            document.body.appendChild(scheduleModal);
        }
        
        function closeModal(modalElement) {
            document.body.removeChild(modalElement);
        }
        
        function confirmSchedule() {
            showNotification('已設定報表排程');
            closeModal(document.querySelector('.modal-overlay'));
        }
        
        function implementSuggestion(suggestionId) {
            showNotification('正在實施建議...');
            setTimeout(() => {
                showNotification('✅ 建議實施完成，預期效果將在7天內顯現');
            }, 3000);
        }
        
        function setPerformanceTime(timeRange) {
            document.querySelectorAll('.time-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            showNotification(`切換到 ${timeRange} 視圖`);
        }
        
        function optimizeDatabase() {
            showNotification('正在優化資料庫...');
            setTimeout(() => {
                showNotification('✅ 資料庫優化完成，查詢速度提升30%');
            }, 3000);
        }
        
        function initializeActivityHeatmap() {
            const container = document.getElementById('activityHeatmap');
            if (!container) return;
            
            const days = ['週日', '週一', '週二', '週三', '週四', '週五', '週六'];
            let heatmapHTML = '<div class="heatmap-grid">';
            for (let day = 0; day < 7; day++) {
                heatmapHTML += `<div class="heatmap-row">`;
                heatmapHTML += `<div class="day-label">${days[day]}</div>`;
                for (let hour = 0; hour < 24; hour++) {
                    const intensity = Math.random();
                    const color = `rgba(52, 152, 219, ${intensity})`;
                    heatmapHTML += `<div class="heat-cell" style="background-color: ${color}; width: 12px; height: 20px; margin: 1px; display: inline-block; border-radius: 2px;" title="${hour}:00"></div>`;
                }
                heatmapHTML += `</div>`;
            }
            heatmapHTML += '</div>';
            container.innerHTML = heatmapHTML;
        }
        
        function initializeForecastChart() {
            const ctx = document.getElementById('forecastChart');
            if (!ctx) return;
            
            charts.forecast = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['實際1', '實際2', '實際3', '預測1', '預測2'],
                    datasets: [{
                        label: '歷史數據',
                        data: [12000, 15000, 18000, null, null],
                        borderColor: '#3498db'
                    }, {
                        label: '預測數據',
                        data: [null, null, 18000, 19000, 21000],
                        borderColor: '#e74c3c',
                        borderDash: [5, 5]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }
        
        function initializeBehaviorChart() {
            const ctx = document.getElementById('behaviorChart');
            if (!ctx) return;
            
            charts.behavior = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['瀏覽頻率', '購買轉換', '客戶忠誠', '推薦意願', '滿意度', '回購率'],
                    datasets: [{
                        label: 'VIP客戶',
                        data: [90, 85, 95, 88, 92, 94],
                        borderColor: '#27ae60'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }
        
        function initializePerformanceChart() {
            const ctx = document.getElementById('performanceTrendChart');
            if (!ctx) return;
            
            charts.performance = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: ['00:00', '04:00', '08:00', '12:00', '16:00', '20:00'],
                    datasets: [{
                        label: 'CPU使用率',
                        data: [25, 30, 45, 50, 35, 20],
                        borderColor: '#e74c3c'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        }
        
        // 擴展原有的初始化函數
        const originalInitializeCharts = initializeCharts;
        initializeCharts = function() {
            originalInitializeCharts();
            setTimeout(() => {
                initializeForecastChart();
                initializeBehaviorChart();
                initializePerformanceChart();
                initializeActivityHeatmap();
            }, 100);
        }
    </script>
